/* pages/appointroom/appointroom.wxss */
.header {
  height: 80rpx;
  position: relative;
  display: flex;
}

.title {
  color: #333;
  font-size: 38rpx;
  font-weight: 600;
  line-height: 80rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 162rpx;
}

image {
  display: inline-block;
}

.news {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.news_img {
  width: 48rpx;
  height: 48rpx;
}

.news_yuan {
  position: absolute;
  top: -8px;
  left: 30rpx;
  border-radius: 50%;
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #e61212;
}
.table {
  width: 100%;
  height: 95rpx;
  background: transparent;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
}

.boxS {
  width: 100%;
  height: 80rpx;
  position: absolute;
  background: #fff;
}

.select {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 84rpx;
  height: 84rpx;
  position: relative;
  z-index: 2ï¼›;
}

.select:nth-of-type(2) {
  margin-left: 30rpx;
}

.select:last-of-type {
  margin-right: 30rpx;
}

.select>text {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
}

.act {
  background: #fbaf02;
  border-radius: 50%;
}
.active{
  color: #fbaf02 !important
}
.act>text {
  color: #fff;
}
.tabTime{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 36rpx
}
.tabTime>view{
  display: flex;
  flex-direction: column;
  align-items: center
}
.timeLine{
  margin-top: 12rpx;
  width:60rpx;
  height:16rpx;
  background:rgba(251,175,2,1);
  border-radius:8px;
}
.roomList{
  position: relative;
  padding-top: 114rpx;
  margin-bottom: 40rpx
}
.roomPic{
  width: 590rpx;
  height: 240rpx;
  border-radius: 30rpx;
  position: absolute;
  top: 0;
  left: 80rpx;
  overflow: hidden
}
.roomBottom{
  box-sizing: border-box;
  width: 670rpx;
  height: 282rpx;
  padding-top: 146rpx;
  text-align: center;
  box-shadow:2rpx 2rpx 12rpx rgba(0,0,0,0.12);
  margin: 0 auto;
  border-radius: 30rpx
}
.roomBottom>view:nth-of-type(1){
  font-size:36rpx;
  color: #333;
  font-weight: bolder
}
.roomBottom>view:nth-of-type(2){
  font-size:28rpx;
  color: #999;
  margin-top: 12rpx
}
.type{
  position: absolute;
  top: 20rpx;
  right: 100rpx;
  width: 168rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  background: #fff;
  border-radius: 24rpx
}