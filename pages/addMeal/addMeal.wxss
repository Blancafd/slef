/* pages/addMeal/addMeal.wxss */
.head{
  display: flex;
  align-items: center;
  padding-left: 30rpx
}
.back{
  width: 48rpx;
  height: 48rpx;
  margin-right: 44rpx
}
.back>image{
  width: 100%;
  height: 100%
}
.search{
  background: #F5F5F5;
  width: 424rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  justify-content: space-between
}
.search>input{
  font-size: 26rpx
}
.searchImg{
  width: 36rpx;
  height: 36rpx
}
.searchImg>image{
  width: 100%;
  height: 100%
}
.swiper_box {
  width: 670rpx;
  height: 310rpx;
  margin: 40rpx auto 30rpx;
}
swiper {
  border-radius: 10rpx;
  overflow: hidden;
  height: 100%;
}
.mealTab{
  height: 176rpx;
  display: flex;
  overflow: auto;
  background: #eee;
}
.list{
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-left: 4rpx
}
.img{
  width: 100rpx;
  height: 100rpx;
}
.img>image{
  width: 100%;
  height: 100%
}
.leftBottom{
  border-bottom-left-radius: 30rpx
}
.rightBottom{
  border-bottom-right-radius: 30rpx
}
.active{
  background: #eee
}
.mealmg{
  border-radius: 10rpx;
  width: 200rpx;
  height: 200rpx;
  margin-right: 32rpx;
  position: relative;
  overflow: hidden
}
.isSellout{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background:rgba(0,0,0,0.3);
  text-align: center;
  color: #fff;
  font-size: 24rpx
}
.mealmg>image{
  width:100%
}
.mealname{
  display: flex;
  font-size: 36rpx;
  color: #333;
  align-items: center
}
.tag{
  width: 126rpx;
  height: 34rpx;
  background:rgba(252,215,215,1);
  font-size: 24rpx;
  color: #EF1212;
  text-align: center;
  border-radius: 6rpx;
}
.activecolor{
   color: #999999 !important;
}
.material{
  color: #999999;
font-size: 24rpx;
margin: 8rpx 0rpx
}
.calculation{
  display: flex;
  align-items: center
}
.reduce{
 width: 54rpx;
 height: 54rpx
}
.reduce>image{
  width: 100%;
  height: 100%
}
.price{
  display: flex;
  justify-content: space-between;
  margin-top: 22rpx
}
.mealListBox{
  box-sizing: border-box;
  padding-top: 40rpx;
  padding-bottom: 100rpx;
  height: 650rpx;
  overflow: auto
}
.mealList{
  width: 670rpx;
  height: 200rpx;
  display: flex;
  margin: 0 auto;
  margin-bottom: 40rpx;
  box-sizing: border-box
}
.mealDetail{
  flex: 1
}
.money{
  font-size: 36rpx;
  color: #E61212
}
.footer {
    position: fixed;
    bottom: 0px;
    width: 100%;
    height: 100rpx;
    background-color: #555555;
    display: flex;
    z-index: 15
}

.shop {
    position: relative;
    width: 140rpx;
}

.footer_img {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: -40%;
    left: 40rpx;
}

.footer_yuan {
    font-size: 26rpx;
    color: #fff;
    background-color: #E61212;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 40rpx;
    position: absolute;
    top: -30%;
    left: 92%;
}

.footer_price {
    width: 320rpx;
}

.footer_price_yuan {
    color: #fff;
    font-size: 28rpx;
    line-height: 100rpx;
    padding-left: 60rpx;
}

.footer_price_num {
    color: #fff;
    font-size: 36rpx;
    line-height: 100rpx;
    font-weight: bold;
}

.jiesuan {
    background-color: #FBAF02;
    color: #fff;
    font-size: 36rpx;
    font-weight: 500;
    text-align: center;
    line-height: 100rpx;
    width: 210rpx;
    position: absolute;
    right: 0px;
}

/* 为选购 */
.footer_none {
    color: #D8D8D8;
    font-size: 36rpx;
    line-height: 100rpx;
    padding-left: 60rpx;
}
.shopcar{
  width: 100%;
  position: fixed;
  bottom: 98rpx;
  max-height: 500rpx;
  background: #fff;
  overflow: auto;
  z-index: 10
}
.clear{
  width: 34rpx;
  height: 34rpx
}
.clear>image{
  width: 100%;
  height: 100%
}
.carHead{
  width: 100%;
  background: #E6E6E6;
  height: 82rpx;
  display: flex;
  padding: 0rpx 38rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between
}
.mark{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 10
}
.carlist{
  padding: 0rpx 40rpx 0rpx 48rpx;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box
}
.dishDetail{
  display: flex;
  width: 400rpx;
  justify-content: space-between;
  margin-top:40rpx;
  margin-bottom: 38rpx 
}
.searchPage{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom:120rpx;
  z-index: 8;
  top:150rpx;
  box-sizing: border-box;
  background: #fff
}
.cartital{
  display: flex;
  height: 100%;
  align-items: center;
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 5rpx;
  float: left;
  text-align: center;
}

.wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: white;
  border-radius: 15rpx;
  border: 0rpx;
  opacity: 1;
}

.wx-swiper-dot.wx-swiper-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: white;
  opacity: 1;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 72rpx;
  height: 20rpx;
  border-radius: 10rpx;
  opacity: 1;
}