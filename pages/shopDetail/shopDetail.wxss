/* pages/shopDetail/shopDetail.wxss */

.head {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.back {
  width: 48rpx;
  height: 48rpx;
  position: fixed;
}

.back>image {
  width: 100%;
  height: 100%;
}

.search {
  font-size: 40rpx;
  margin: 0 auto;
}

.swiper_box {
  width: 670rpx;
  height: 470rpx;
  margin: 40rpx auto 30rpx;
}

swiper {
  border-radius: 10rpx;
  overflow: hidden;
  height: 100%;
}

.shopDetail {
  margin: 0 auto;
  width: 670rpx;
  height: 258rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.12);
  border-radius: 16rpx;
  margin-top: 40rpx;

  box-sizing: border-box
}
.time{
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx
}
.time>image{
  width: 100%;
  height: 100%
}
.shopDetail>view{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-bottom: 16rpx
}
.address{
  padding-top: 32rpx
}
.addressStyle{
  font-size: 24rpx;
  color: #999;

}
.timeStyle{
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx
}
.btn{
  position: fixed;
  bottom: 10rpx;
  width: 670rpx;
  height: 86rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FBAF02;
  font-size: 36rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 20rpx
}
.maplogo{
  width: 50rpx;
  height: 50rpx
}
.maplogo>image{
  width: 100%;
  height: 100%
}
.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 5rpx;
  float: left;
  text-align: center;
}

.wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: white;
  border-radius: 15rpx;
  border: 0rpx;
  opacity: 1;
}

.wx-swiper-dot.wx-swiper-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: white;
  opacity: 1;
}

.wx-swiper-dot.wx-swiper-dot-active {
  width: 72rpx;
  height: 20rpx;
  border-radius: 10rpx;
  opacity: 1;
}