/* component/popup.wxss */
.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
  border-radius: 30rpx;
}
.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 34rpx;
  color: #333;

}
.wx-popup-con {
  margin: 20rpx 10rpx 30rpx;
  text-align: center;
color: #999;
font-size: 28rpx;

}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36%;
  height: 63rpx;
  border: 2rpx solid #ccc;
  border-radius: 15rpx;
  font-size: 24rpx;
  overflow: visible;

}